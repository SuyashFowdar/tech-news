<!DOCTYPE html>
<html>
  <head>
    <title>TechNews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <nav class="nav row">
      <div class="row">
          <%= link_to "Home", root_path %>
          <% @nav_categories.each do |category| %>
            <%= link_to category.name, category %></td>
          <% end %>
      </div>
      <% if session[:user_id] %>
        <div class="row">
          <span class="nav-item"><%= session[:user_name] %></span>
          <%= link_to 'New Article', new_article_path%>
          <%= link_to "Log Out", users_destroy_session_path %>
        </div>
      <% else %>
        <div class="row">
          <%= link_to 'Log In', users_sign_in_path %>
          <%= link_to 'Sign Up', users_sign_up_path %>
        </div>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
